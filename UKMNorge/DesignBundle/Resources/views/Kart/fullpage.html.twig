{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<div class="container sitemap">
		<div class="row">
			<div class="col-12 col-lg-3 float-right">
				<h2>Velg ditt fylke</h2>
            </div>
        </div>

        <div class="row pageContainer">
            {% for fylke in fylker %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="page p-2 px-4 m-2 center white" style="background: rgba(0,0,0,.3);">
                        <a href="//{{UKM_HOSTNAME}}/{{ fylke.getLink() }}/" class="autoshrink">{{ fylke.getNavn() }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
