{% extends "UKMDesignBundle:Layout:_framework.html.twig"|UKMpath %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ UKMasset("js/UKMfullpage.min.js") }}?20181112-Mina"></script>
{% endblock %}

{% block css %}
	{{ parent() }}
	<link href="{{ UKMasset("css/UKMfullpage.min.css") }}" rel="stylesheet" />
{% endblock %}

{% block framework_content %}
	<div id="fullpage">
		<section class="section fullpage white waypoint" data-photo-background-transition="#000000" style="background-color: #00508C;" data-photo-background="https://grafikk.ukm.no/forside/fylkesfestivaler-publikum.jpg">
			<div class="fullpage-content">
				<div class="meny">
					<a href="/hovedmeny/" class="btn btn-sm my-2 btn-outline-primary">MENY</a>
				</div>
				<div class="logo">
					<img src="https://grafikk.ukm.no/profil/logoer/UKM_logo_hvit_0100.png" />
				</div>
				<header class="white" style="z-index: 100">
					<h1 class="border autoshrink">
						<a href="#finn/3">FINN DIN FYLKESFESTIVAL</a>
					</h1>
					<div class="header-more" style="margin-top: 5vh;">
						<p>
							<a href="https://ukm-festivalen.no">UKM-festivalen</a>
							|
							<a href="#om/2">Hva er UKM?</a>
						</p>

						<div class="readmoreIcon">
							<a href="#om/2" style="text-decoration: none"><span class="icon icon-down-2"></span></a>
						</div>
					</div>
				</header>
			</div>
		</section>
		
		<section class="section fullpage white waypoint" data-photo-background-transition="#000000" style="background-color: #00508C;" data-photo-background="https://grafikk.ukm.no/forside/hvit-pixel.jpg">
			<div class="fullpage-content" style="display: flex;">
				<div class="container mt-3 mb-3">
					<div class="row">
						{% for post in PtF_posts %}
							<div class="col-12 col-lg-6">
								{% embed "Post/grid-default.html.twig" with {'post': post} %}{% endembed %}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>

		<section class="section fullpage white waypoint" data-photo-background-transition="#000000" style="background-color: #00508C;" data-photo-background="https://grafikk.ukm.no/forside/newdawn.jpg">
			<div class="fullpage-content" style="display: flex;">
				<div class="container sitemap mt-5">
					<div class="row pageContainer">
						{% for fylke in fylker %}
							<div class="col-12 col-sm-6 col-lg-4">
								<div class="page p-2 px-4 m-2 center white" style="background: rgba(0,0,0,.3);">
									<a href="{{ fylke.getLink() }}" class="autoshrink">{{ fylke.getNavn() }}</a>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
				
			</div>
		</section>

		<section class="section fullpage white waypoint" data-photo-background-transition="#000000" style="background-color: #00508C;" data-photo-background="https://grafikk.ukm.no/forside/korslaget-bla.jpg">
			<div class="fullpage-content" style="display: flex;">
				<div class="hugetext center">
					<p class="lead mt-3">
					Noen deltar på UKM for å vise frem noe de brenner for, noen prøver noe helt nytt og andre er med sånn at alle får vist sin beste side.
					</p>
					<p class="lead">
						Sammen skaper vi noe nytt, inspirerer og lærer av hverandre og har det gøy.
					</p>
					<p class="lead">
						Musikal, slampoesi, lysteknikk, foto, hiphop, 
						<a href="{{ pamelding_apen ? '//delta.'~ UKM_HOSTNAME ~'/' : '/hva-er/' }}" style="color: #fff;">eller?</a>
						<br />
						<a href="{{ pamelding_apen ? '//delta.'~ UKM_HOSTNAME ~'/' : '/hva-er/' }}" style="color: #fff;">Du bestemmer</a>
					</p>
					<p class="lead" style="margin-bottom: 16vh;">
						<a href="/hva-er/" class="btn btn-outline-primary btn-xs" style="border-radius: 0px; border-color: #fff !important; color: #fff !important;">Les mer</a>
					</p>
				</div>
			</div>
		</section>

		<section class="section fullpage white waypoint" data-photo-background-transition="#000000" style="background-color: #00508C;" data-photo-background="https://grafikk.ukm.no/forside/festivalen.jpg">
			<div class="fullpage-content" style="display: flex;">
				<div class="center" style="flex-direction: column; align-self: center; margin: auto auto;">
					<h1 style="padding-top: 10vh; font-size: 3.4em;">
						<span style="background: rgba(0,0,0,.8); padding: .1em .3em; line-height: 1.3em; -webkit-box-decoration-break: clone;">UKM-FESTIVALEN 2019</span>
					</h1>
					<p class="lead">
						<span style="text-shadow: 0px 0px 15px #000">Stjørdal, 24.-28.juni</span>
					</p>
					<p class="lead">
						<span style="text-shadow: 0px 0px 15px #000"><a href="https://ukm-festivalen.no">UKM-festivalen.no</a></span>
					</p>
				</div>
			</div>
		</section>

	</div>	
{% endblock %}
