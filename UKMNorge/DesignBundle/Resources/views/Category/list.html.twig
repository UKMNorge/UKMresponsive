{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<div class="container-fluid">
		{% if category is defined %}
			<h1>{{ category.name }}</h1>
			<p>{{ category.description|raw }}</p>
		{% endif %}
		<div class="row">			
			{% for post in posts %}
				<div class="col-6 col-sm-4 col-lg-3">
					{% embed "Post:grid-default.html.twig"|UKMpath %}{% endembed %}
				</div>
			{% else %}
				{% if hideNoneFound is not defined %}
					<div class="col-12">
						Ingen artikler i denne kategorien.
					</div>
				{% endif %}
			{% endfor %}
		</div>
		{% embed "Category:next_prev_links.html.twig"|UKMpath %}{% endembed %}
	</div>
{% endblock %}