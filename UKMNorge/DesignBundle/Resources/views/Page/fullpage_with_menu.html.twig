{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-10 ml-md-auto mr-md-auto col-lg-8">
				<article>
					<h1>{{ page.getPage().title|raw }}</h1>
					{{ page.getPage().content|raw }}
				</article>
			</div>
			<div class="col-12 col-md-10 col-lg-3 ml-md-auto mr-md-auto mt-5">
				{#<p class="small bold mt-4 mb-1 right">SNARVEIER</p>#}
				{% for element in meny %}
					<a href="{{ element.url }}" class="btn btn-outline-primary btn-block btn-sm">
						{{ element.title }}
					</a>
				{% endfor %}
			</div>
		</div>
	</div>
	
{% endblock %}