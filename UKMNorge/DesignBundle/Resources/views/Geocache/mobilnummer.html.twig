{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>Hva er mobilnummeret ditt?</h1>
				<form method="POST" action="{{ formAction }}">
					<div class="form-group">
						<input type="tel" class="form-control form-control-lg" name="mobil" id="mobil" required />
					</div>
					
					<div class="form-group">
						<button class="btn btn-outline-primary" style="background-color: #fff;" type="submit">That's me!</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}