<div class="page-menu">
	<div class="row">
		{% if harProgram %}
			<div class="col menu-item">
				<a href="{{ monstring.getLink() }}program/">
					<div class="icon icon-calendar"></div>
					<div class="text">Program</div>
				</a>
			</div>
		{% endif %}
		{% if monstring.getInnslag().harInnslag() %}
			<div class="col menu-item">
				<a href="{{ monstring.getLink() }}pameldte/">
					<div class="badge badge-pill badge-primary pameldte-badge">
						{{ monstring.getStatistikk().getTotal( monstring.getSesong() ).persons }}
					</div>
					<div class="icon icon-users"></div>
					<div class="text">PÃ¥meldte</div>
				</a>
			</div>
		{% endif %}
		{% if ukmtv %}
			<div class="col menu-item">
				<a href="//tv.ukm.no/lokal/{{ (monstring.getKommuner()|first).getId()~'-'~(monstring.getKommuner()|first).getURLsafe()~'/'~ monstring.getSesong() }}/">
					<div class="icon icon-tv"></div>
					<div class="text">TV</div>
				</a>
			</div>		
		{% endif %}
		{% if state == 'ferdig' and harInfoPage %}
			<div class="col menu-item">
				<a href="{{ monstring.getLink() }}info/">
					<div class="icon icon-info-with-circle"></div>
					<div class="text">Praktisk info</div>
				</a>
			</div>
		{% endif %}
		<div class="col menu-item">
			<a href="{{ monstring.getLink() }}kontaktpersoner/">
				<div class="icon icon-mobile"></div>
				<div class="text">Kontakt</div>
			</a>
		</div>
	</div>
	
	{% if direkte is defined and direkte != false %}
		<div class="row mt-3">
			<div class="col">
				{% if direkte.type == 'link' %}
					<a href="{{ direkte.link }}" target="_blank" class="btn btn-block btn-outline-primary">Se direktesending her</a>
				{% endif %}
			</div>
		</div>
	{% endif %}
	<div class="clearfix"></div>
</div>