{% if kontaktpersoner|length > 0 %}
    {% if fullframe is not defined %}
        <div class="row">
            {% for kontakt in kontaktpersoner %}
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                    {% embed "UKMDesignBundle:Kontaktpersoner:grid.html.twig"|UKMpath %}{% endembed %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        {% for kontakt in kontaktpersoner %}
            {% embed "UKMDesignBundle:Kontaktpersoner:grid.html.twig"|UKMpath %}{% endembed %}
        {% endfor %}
    {% endif %}
{% else %}
    <p>
        Vi har ikke kontaktinformasjon for UKM {{ navn }} enda.
        Vi jobber med å skaffe det, så du må gjerne prøve igjen om noen dager.
    </p>
{% endif %}
