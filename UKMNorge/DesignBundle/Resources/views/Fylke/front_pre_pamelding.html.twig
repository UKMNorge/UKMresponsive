{% extends "UKMDesignBundle:Layout:_base.html.twig"|UKMpath %}

{% set sectionTitle = fylke.getNavn() %}

{% block content %}
	<div class="container-fluid">
		<div class="row-flex">
			<div class="col-12 col-md-4 col-lg-3 col-xl-3 float-right">
				<h3 class="d-none d-md-block">&nbsp;</h3>
				<h3>Påmeldingen åpner {{ THEME_CONFIG('pamelding').startdato }}</h3>
				<p class="lead">
					Vil du ha en gratis sms når påmeldingen åpner?
				</p>
				{% embed "UKMDesignBundle:Husk:Form.html.twig"|UKMpath %}{% endembed %}
			</div>

			<div class="col-12 col-md-8 col-lg-9 col-xl-9 float-left">
				<div class="d-block d-sm-none mt-3"></div>
				<h3>Mer om UKM der du bor</h3>
				{% embed "UKMDesignBundle:Fylke:velg_lokalmonstring.html.twig"|UKMpath %}{% endembed %}
			</div>
		</div>
		<div class="clearfix my-3"></div>
		{% set singleMode = true %}
		{% embed "UKMDesignBundle:Category:list.html.twig"|UKMpath with {posts: posts.getAll(), hideNoneFound: true} %}{% endembed %}
	</div>
{% endblock %}