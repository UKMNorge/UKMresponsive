<script type="text/javascript">
$(document).on('UKMtoggleShow#UKMtoggleLokal', function() {
	$(window).trigger('resize');
});
</script>
<div class="d-block d-md-none">
	<button class="btn btn-outline-primary btn-block UKMtoggleShow UKMtoggleLokal" data-target="UKMtoggleLokal">Velg din {{ fylke.erOslo() ? 'bydel' : 'kommune' }}</button>
	<button class="btn btn-outline-primary btn-block UKMtoggleHide UKMtoggleLokal mt-0" data-target="UKMtoggleLokal" style="display:none">Lukk listen</button>
</div>
<div class="UKMtoggleContent" id="UKMtoggleLokal">
	<div class="row">
	{% for lokalmonstring in lokalt %}
		<div class="col-6 col-sm-4 col-md-6 col-lg-4 col-xl-3 my-1">
			<a href="{{ lokalmonstring.getLink() }}" class="btn btn-block btn-outline-primary mx-0" style="line-height: 1.25em;">
				<div class="autoshrink">
					{{ lokalmonstring.getNavn() }}
				</div>
			</a>
		</div>
	{% endfor %}
	</div>
	<button class="btn btn-outline-primary btn-block UKMtoggleHide UKMtoggleLokal" data-target="UKMtoggleLokal" style="display:none">Lukk listen</button>
</div>