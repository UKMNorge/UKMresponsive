{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'newsletter_base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<script>
		$(document).on('click', '.clickContainer', function(e){
			e.preventDefault();
			window.location.href = $(this).find('.momClickMeClickMe').attr('href');
		});
	</script>
	<style>
		h1, .h1,
		h2, .h2,
		h3,	.h3,
		h4,	.h4,
		h5,	.h5,
		h6,	.h6,
		p,	.p {
			opacity: 1;
		}
		
		.blackBG {
			background-color: #000;
			color: #fff;
		}
		
		.UKMfestivalBox {
			min-height: 20vh;
			background-repeat: no-repeat;
			background-size: cover;
			background-position: center center;
		}
		#UKMheader_separator {
			border-bottom: 0.4em solid #000;
		}
		.white {
			color: #fff;
		}
		footer.mt-4 {
			margin-top: 0px !important;
		}
		
		.clickContainer {
			cursor: pointer;
		}
		
		a,
		a:hover,
		a:active,
		a:visited {
			color: inherit;
		}
		
		
		#forste_linje {
			margin-top: -1em;
		}
		@media (min-width: 992px) {
			#forste_linje {
			    margin-top: -1.4em;
			}
		}
		
		/** MOBIL **/
		#boxProgram {
			min-height: 30vh !important;
			background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/program.jpg'); 
		}
		#boxProgram h2 {
			margin-top: Calc( 35% - 1em);
			margin-bottom: Calc( 35% - 1em );
		}
		#boxDeltaker {
			background-color: #afd6b7;
		}
		#boxPublikum {
			background-color: #151e3f;
		}
		#boxHvaEr {
			background-color: #ddd;
			background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/hvaer.jpg');
			background-position: bottom right;
		}
		#boxDeltar {
			background: #5c3b8a;
		}
		#boxDeltakerprogram {
			background: #151e3f;
		}
		#boxWorkshops {
			background: #afd6b7;
		}

		/** DESKTOP **/
		@media (min-width: 992px) {
			#boxDeltaker {
				color: #fff;
				background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/deltaker.jpg');
			}

			#boxPublikum {
				background-color: #afd6b7; /* Mobil-fargen fra deltaker-boksen */
			}
		}

		.textOverlayHeader {
			color: #f4df42;
			background: none;
		}

		.textOverlay {
			position: absolute;
			
			transform: translate(-50%, -50%);
			font-family: 'anton', bold sans-serif;
			
			width: 100%;
		}

		.headerTitle {
			font-size: 3.5em;
			color: #FCF7BD;
			letter-spacing: 0.3rem;
			left: 50%;
			top: 35%;

		}

		.oskarSak {

		}

		#forste_linje {
			background-color: black;
		}

		/* #### NYHETSBREV #### */
		.ticker {
			width: 110%;
			min-height: 1.6em;
			display: block;
			font-family: 'anton', bold sans-serif;
			font-size: 1.2em;
			padding-top: 0.3em;
			padding: 0.3em;
			padding-left: 0em;
			background-color: #f4d909;
			white-space:nowrap;
    		overflow:hidden;
    		letter-spacing: 0.1rem;
		}

		.ticker < marquee {
		
		}

		.topBoxÂ {
			background-color: black;
			display: block;

		}

		.anton {
			font-family: 'Anton', sans-serif;
			font-size: 2em;
		}

		.anton.big {
			font-size: 3em!important;
		}

		.inline-row {
			height: 22vh;
		}

		.fullwidthBox {
			background-color: black; 
			display: block;
			height: 30vh;
			overflow: hidden;
			background-repeat: no-repeat;
			background-size: 100% auto;
		}

		.fullwidthBox > a {
			top: 50%;
			transform: translate(-50%, -50%);
			font-family: 'Crimson Text', serif;
		}

		.fullwidthBox > a.anton {
			font-family: 'Anton', sans-serif;
		}

		.halfwidthBox > a {
			font-family: 'Work Sans';
			font-size: 26px;
			color: white;
			display: block;
			transform: translate(0, 75%);
			text-align: center;
		}

		.halfwidthBox > a.anton {
			font-family: 'Anton', sans-serif;
			padding-bottom: 0.4rem;
		}

		.headerBox {
			height: auto;
		}

		.newsletter_green {
			background-color: #00be41;
		}

		.newsletter_purple {
			background-color: #d32efc;
		}

		.newsletter_yellow {
			background-color: #f7ea55;
		}

		/* Override color on each sticker element! */
		.sticker {
			border-radius: 50%;
			height: 10vh;
			width: 10vh;
			display: inline-block;
			position: absolute;
			z-index: 10000;
		}

		.sticker.center {
			left: 50%;
			transform: translate(-50%, 170%);
		}

		.sticker > a {
			position: relative;
			font-family: 'anton', sans-serif;
			font-size: 4vw;
			color: white;
			display: block;
			text-align: center;
			margin-bottom: -0.3em;
		}

		.sticker > a.big {
			top: 35%;
			font-size: 6vw;
		}
		
	</style>
	<div class="container-fluid" id="forste_linje" style="overflow: hidden; max-width: 700px;">
		<div class="row center" style="max-height: 50vh">
			<img src="{{ UKMasset('img/newsletter/ukm_ankomst-3.jpg') }}" style="object-fit: cover;" />
			<div class="textOverlay headerTitle center">
				<a href="#" class="big center">UKM-REISEN</a>
			</div>
		</div>

		<div class="row ticker">
			<marquee behavior="scroll" scrollamount="5" direction="left" >ER DETTE NYHETSBREVET TIL FESTIVALEN? JA, DET STEMMER!</marquee>
		</div>

		{# HALVBREDDE-SAK #}
		<div class="row">
			<div class="UKMfestivalBox col-6 halfwidthBox clickContainer newsletter_green">
				<br />
				<a href="help" class="anton momClickMeClickMe" style="font-size: 2.15rem; padding-bottom: 0.2rem;">FESTIVAL-</a>
				<a href="" class="anton big" style="margin-top: 0.2em;">GUIDEN</a>
			</div>
			<div class="UKMfestivalBox col-6 halfwidthBox clickContainer" style="overflow:hidden;">
				<div class="row inline-row">
					<img src="https://media.giphy.com/media/wNOsMItba4FwY/giphy.gif">
				</div>
			</div>
			<div class="clickContainer sticker center newsletter_purple">
				<a href="#" class="big momClickMeClickMe">MAT</a>
			</div>
			<div class="clearfix"></div>
		</div>
		{# FULLBREDDE-SAK #}
		<div class="row fullwidthBox" style="background-image: url('{{ UKMasset("img/festival/deltaker.jpg" ) }}'); background-position: -100px 5px;
			">
			<div class="textOverlay oskarSak">
				<a href="#" class="momClickMeClickMe">FULLBREDDE-SAK</a>
			</div>
		</div>
		<div class="row fullwidthBox newsletter_purple headerBox big center" style="color: white; padding-top: 0.6em;">
			<a href="https://festivalen.ukm.no/category/workshop-foredrag/" target="_blank" class="anton big center momClickMeClickMe">WORKSHOPS WORKSHOPS WORKSHOPS</a>
		</div>
		<div class="row fullwidthBox newsletter_purple headerBox big center" style="color: white; padding-top: 0.6em;">
			<br /><a href="https://festivalen.ukm.no/deltakerprogram/" target="_blank" class="anton big center momClickMeClickMe">PROGRAM</a><br /><br />
		</div>
		<div class="row fullwidthBox">
			<img src="https://media.giphy.com/media/mbEgX6CUS01cQ/giphy.gif" style="width: 100%">
		</div>
		<div class="row">
			<div class="col-12" style="background: #000;">
				&nbsp;
			</div>
		</div>
	</div>
