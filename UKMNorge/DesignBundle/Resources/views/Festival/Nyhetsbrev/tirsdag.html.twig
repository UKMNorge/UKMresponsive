{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<script>
		$(document).on('click', '.clickContainer', function(e){
			e.preventDefault();
			window.location.href = $(this).find('.momClickMeClickMe').attr('href');
		});
	</script>
	<style>
		h1, .h1,
		h2, .h2,
		h3,	.h3,
		h4,	.h4,
		h5,	.h5,
		h6,	.h6,
		p,	.p {
			opacity: 1;
		}
		
		.blackBG {
			background-color: #000;
			color: #fff;
		}
		
		.UKMfestivalBox {
			min-height: 20vh;
			background-repeat: no-repeat;
			background-size: cover;
			background-position: center center;
		}
		#UKMheader_separator {
			border-bottom: 0.4em solid #000;
		}
		.white {
			color: #fff;
		}
		footer.mt-4 {
			margin-top: 0px !important;
		}
		
		.clickContainer {
			cursor: pointer;
		}
		
		a,
		a:hover,
		a:active,
		a:visited {
			color: inherit;
		}
		
		
		#forste_linje {
			margin-top: -1em;
		}
		@media (min-width: 992px) {
			#forste_linje {
			    margin-top: -1.4em;
			}
		}
		
		/** MOBIL **/
		#boxProgram {
			min-height: 30vh !important;
			background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/program.jpg'); 
		}
		#boxProgram h2 {
			margin-top: Calc( 35% - 1em);
			margin-bottom: Calc( 35% - 1em );
		}
		#boxDeltaker {
			background-color: #afd6b7;
		}
		#boxPublikum {
			background-color: #151e3f;
		}
		#boxHvaEr {
			background-color: #ddd;
			background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/hvaer.jpg');
			background-position: bottom right;
		}
		#boxDeltar {
			background: #5c3b8a;
		}
		#boxDeltakerprogram {
			background: #151e3f;
		}
		#boxWorkshops {
			background: #afd6b7;
		}

		/** DESKTOP **/
		@media (min-width: 992px) {
			#boxDeltaker {
				color: #fff;
				background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/deltaker.jpg');
			}

			#boxPublikum {
				background-color: #afd6b7; /* Mobil-fargen fra deltaker-boksen */
			}
		}

		.textOverlayHeader {
			color: #f4df42;
			background: none;
		}


		#forste_linje {
			background-color: black;
		}

		/* #### NYHETSBREV #### */
		.ticker {
			width: 110%;
			min-height: 1.6em;
			display: block;
			font-family: 'Crimson Text', serif;
			font-size: 1.3em;
			background-color: #f4d909;
			white-space:nowrap;
    		overflow:hidden;
		}

		.ticker > span {
			display: block;
			position: relative;
			top: 0.2em;
		}

		.fullwidthBox {
			background-color: black; 
			display: block;
			height: 30vh;
			overflow: hidden;
			background-repeat: no-repeat;
			background-size: 100% auto;
		}

		.fullwidthBox > a {

			top: 50%;
			transform: translate(-50%, -50%);
			font-family: 'Crimson Text', serif;
		}

		.halfwidthBox > a {
			font-family: 'Work Sans';
			font-size: 26px;
			color: white;
			display: block;
			transform: translate(0, 75%);
			text-align: center;
		}

		/* Override color on each sticker element! */
		.sticker {
			border-radius: 50%;
			height: 17vh;
			width: 17vh;
			display: inline-block;
			position: absolute;
			z-index: 10000;
		}

		.sticker.center {
			left: 50%;
			transform: translate(-50%, 70%);
		}

		.sticker > a {
			position: relative;
			/*font-family: impact;*/
			font-family: 'Encode Sans Semi Expanded', serif;
			font-size: 4vw;
			color: white;
			display: block;
			top: 40%;
			transform: translate(0, -50%);
			text-align: center;
			margin-bottom: -0.3em;
		}

		.sticker > a.big {
			font-size: 5vw;
			transform: translate(-10%, -50%);
		}
		
	</style>
	<div class="container-fluid" id="forste_linje" style="overflow: hidden;">
		<div class="row ticker ">
			<span>LIKER DU KANSKJE DETTE NYHETSBREVET TIL FESTIVALEN? STEM PÃ… </h2>
		</div>

		{# HALVBREDDE-SAK #}
		<div class="row">
			<div class="UKMfestivalBox col-6 col-lg-3 halfwidthBox clickContainer" style="background-color: #afd6b7;">
				<a href="help" class="momClickMeClickMe">HALVBREDDE-SAK #1</a>
			</div>
			<div class="UKMfestivalBox col-6 col-lg-3 halfwidthBox clickContainer" style="background-color: #151e3f;">
				<a href="help" class="momClickMeClickMe">HALVBREDDE-SAK #2</a>
			</div>
			<div class="clickContainer sticker center" style="background-color: #eb7cff;">
				<a href="#" class="big momClickMeClickMe">DAGENS</a>
				<a href="#" style="left: 2vw;" class="momClickMeClickMe">BLINKSKUDD</a>
			</div>
			<div class="clearfix"></div>
		</div>
		
		{# FULLBREDDE-SAK #}
		<div class="row fullwidthBox" style="background-image: url('//grafikk.ukm.no/UKMresponsive/img/festival/deltaker.jpg'); background-position: -100px 5px;
			">
			<a href="#" class="momClickMeClickMe">FULLBREDDE-SAK</a>
		</div>
		<div class="row fullwidthBox" style="background-image: url('//ukm.dev/festivalen/wp-content/uploads/sites/60/2018/06/Fellesfoto.jpg'); background-position: 0px;
			">
			<a href="#" class="momClickMeClickMe">FULLBREDDE-SAK</a>
		</div>
		<div class="row">
			<div class="col-12" style="background: #000;">
				&nbsp;
			</div>
			<div class="col-12" style="background: #000;">
				<h2 class="my-2 white">SISTE NYHETER</h2>
			</div>
		</div>
	</div>


	<div class="container mt-3">
		{% embed "Category:the_list.html.twig"|UKMpath with {'posts': posts.posts } %}{% endembed %}
	</div>
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Crimson+Text|Encode+Sans+Semi+Expanded|Work+Sans">
{% endblock %}