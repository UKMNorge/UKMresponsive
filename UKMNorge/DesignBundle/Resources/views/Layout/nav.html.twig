<div class="row sitemap">
	{% for section in nav %}
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 section">
			<h2 class="header" style="color: #{{ section.getColor() }}; border-color: #{{ section.getColor() }}">
				<a href="{{ section.getUrl() }}" style="color: #{{ section.getColor() }}; border-color: #{{ section.getColor() }}">{{ section.getTitle() }}</a>
			</h2>
			<ul class="list-unstyled pages">
			{% for page in section.getPages().getAll() %}
				<li>
					<a href="{{ page.getUrl() }}" {{ page.getTargetProperty() }}>
						{{ page.getTitle() }}
					</a>
				</li>
			{% endfor %}
			</ul>
		</div>
		{% if loop.index is divisible by( 2 ) %}
			<div class="clearfix hidden-md-up"></div>
		{% endif %}
		{% if loop.index is divisible by( 3 ) %}
			<div class="clearfix hidden-lg-up"></div>
		{% endif %}
		{% if loop.index is divisible by( 4 ) %}
			<div class="clearfix hidden-lg-down"></div>
		{% endif %}
	{% endfor %}
</div>