{% extends "Layout/_"~ (singleMode is defined and singleMode ? 'singleMode' : 'base' ) ~".html.twig"|UKMpath %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-10 col-lg-8">
				<h1>{{ page.getPage().title|raw }}</h1>
			</div>
		</div>
		
		<div class="row vertical-align-center program">
			{% for dag in monstring.getProgram().sorterPerDag( monstring.getProgram().getAll() ) %}
				<div class="col mt-4 dag">
					<h4 class="linje">{{ dag.date|dato('l j.M')|capitalize }}</h4>
					{% for hendelse in dag.forestillinger if visInterne or (not visInterne and not hendelse.erIntern()) %}
						<div class="card innslagCard UKMcard mb-2 p-0">
							<div class="card-body m-0 p-0">
								<div class="hendelse">
									<div class="husk float-right">
										<div class="icon icon-star-{{ HUSK('hendelse-'~ hendelse.getId() ) ? 'full' : 'outlined'}} click huskMeg" data-husk="hendelse" data-husk-id="{{ hendelse.getId() }}" data-husk-status="{{ HUSK('hendelse-'~ hendelse.getId() ) ? 'true':'false' }}"></div>
									</div>
									<div class="time">
										{% if hendelse.harSynligDetaljprogram() %}
											<a href="{{ hendelse.getId() }}/">{{ hendelse.getStart()|date('H:i') }}</a>
										{% else %}
											{{ hendelse.getStart()|date('H:i') }}
										{% endif %}
									</div>
									<div class="data">
										<div class="tittel">
											{% if hendelse.harSynligDetaljprogram() %}
												<a href="{{ hendelse.getId() }}/">{{ hendelse.getNavn() }}</a>
											{% else %}
												{{ hendelse.getNavn() }}
											{% endif %}
										</div>
										<div class="sted">
											{{ hendelse.getSted() }}
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<div class="col-12">
					<p>
						Det er ikke satt opp noe program enda.
					</p>
					<p>
						<a href="{{ section.url }}">Tilbake til {{ monstring.getNavn() }}</a>
					</p>
				</div>
			{% endfor %}
			<div class="col-12">
				<p class="my-4">
					<a href="{{ section.url }}">Tilbake til {{ monstring.getNavn() }}</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}