<style>
	@media (min-width: 768px) {
		.UKMfavoritt {
			margin-top: 2.7em;
		}
	}
</style>
<div class="UKMfavoritt">
	<div class="body pt-1 pb-2">
		<div class="row-flex">
			<div class="col-12">
				<div class="float-right">
					<span class="icon icon-heart"></span>
				</div>

				<h3 class="mt-3">
					{% if not festivalen.erStartet() %}
						Snart starter UKM-festivalen!
					{% elseif festivalen.erAktiv() %}
						UKM-festivalen er i gang!
					{% else %}
						Se tilbake på UKM-festivalen
					{% endif %}
				</h3>
			</div>
		</div>

		
		<div class="row-flex">
			<div class="col-12">
				<div class="row-flex mt-2">
					Vi har samlet alt på
					<a href="//ukm-festivalen.no">ukm-festivalen.no</a>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
</div>